  UAS scenario: answers calls, plays media for a configurable duration, then waits for BYE.
  Used to simulate an Asterisk/PBX endpoint behind the proxy.

  Usage: sipp -sf uas_answer.xml -p 5080 -mi [local_ip] -mp 30000 -rtp_echo
-->
<scenario name="UAS Answer">

  <!-- Wait for INVITE -->
  <recv request="INVITE" crlf="true">
    <action>
      <ereg regexp=".*" search_in="msg" check_it="true" assign_to="1" />
    </action>
  </recv>

  <!-- Send 100 Trying -->
  <send>
    <![CDATA[
      SIP/2.0 100 Trying
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      Content-Length: 0

    ]]>
  </send>

  <!-- Send 180 Ringing -->
  <send>
    <![CDATA[
      SIP/2.0 180 Ringing
      [last_Via:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag0[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sip:[local_ip]:[local_port];transport=[transport]>
      Content-Length: 0

    ]]>
  </send>

  <pause milliseconds="500"/>

  <!-- Send 200 OK with SDP -->
  <send retrans="500">
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag0[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sip:[local_ip]:[local_port];transport=[transport]>
      Content-Type: application/sdp
      Content-Length: [len]

      v=0
      o=sipp 1 1 IN IP4 [local_ip]
      s=SIPp UAS
      c=IN IP4 [local_ip]
      t=0 0
      m=audio [auto_media_port] RTP/AVP 8 0
      a=rtpmap:8 PCMA/8000
      a=rtpmap:0 PCMU/8000
      a=ptime:20
      a=sendrecv

    ]]>
  </send>

  <!-- Wait for ACK -->
  <recv request="ACK" optional="false" rtd="true" crlf="true"/>

  <!-- Hold the call (wait for BYE from remote side) -->
  <recv request="BYE"/>

  <!-- Send 200 OK for BYE -->
  <send>
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      Content-Length: 0

    ]]>
  </send>

  <ResponseTimeRepartition value="50, 100, 200, 500, 1000, 2000, 5000"/>
  <CallLengthRepartition value="1000, 5000, 10000, 30000, 60000"/>

</scenario>
